<div class="page" id="top">            
    <!-- Home Section -->
    <section class="home-section bg-dark-alfa-50 " style='background-color: #fff;' id="home">
       <div class="container">            
            <!-- Hero Content -->
            <div class="home-content">
                <div class="home-text" style="    padding: 100px 0px 45px 0px;">
                    
                    <h1 class="hs-line-8 no-transp font-alt mb-50 mb-xs-30">
                      Change your password
                    </h1>
                </div>
            </div>
            <!-- End Hero Content -->            
       </div>
    </section>

    <div class="container">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
        <% if resource.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(resource.errors.count, "error") %> prohibited the password from being changed:</h2>

            <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row">
          <div class="field">
            <%= f.label :password, "New password" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, :class => "input-md round form-control", :placeholder => "Password", autofocus: true, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm Password" %><br />
            <%= f.password_field :password_confirmation, :class => "input-md round form-control", :placeholder => "Confirm New Password", autofocus: true, autocomplete: "off"  %>
          </div>
           <div class="clearfix">
          <div class="align-right pt-10">
              <%= submit_tag "Change my password", :class => "submit_btn btn btn-mod btn-medium btn-round", :id => "login-btn" %>
          </div>
        </div>
        </div>          
      <% end %>
    </div>
</div>

<%= render "devise/shared/links" %>
