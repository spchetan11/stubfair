
        
        <!-- Page Wrap -->
        <div class="page" id="top">
            
           
            
            <!-- Head Section --><%if @events.event_images.exists?%>
                    <section class="small-section bg-dark-alfa-50 bg-gray-lighter" style="background:url(<%=@events.event_images.first.image_url%>);background-size:cover;background-position:center center">
                <%else%>
                    <section class="small-section bg-gray-lighter" style="background:url("");background-size:cover;background-position:center center">

                <%end%>
                <div class="relative container align-left">
                    
                    <div class="row">
                        
                        <div class="col-md-8">
                            <h1 class="hs-line-11 font-alt mb-20 mb-xs-0"><%=@events.title%></h1>
                            <div class="hs-line-4 font-alt ">
                                <%= @events.venue%> in <%= @events.location%>
                            </div>


                        </div>
                        
                        <div class="col-md-4 mt-30">
                            <div class="post-prev-more align-center">

                            </div>
                            
                        </div>
                    </div>
                    
                </div>
            </section>
            <!-- End Head Section -->
            
            
            <!-- Section -->
            <section class="page-section">
                <div class="container relative">
                    
                    <!-- Product Content -->
                    <div class="row mb-60 mb-xs-30">
                        
                        <!-- Product Images -->
                        <div class="col-md-5">
                            
                            <div class="post-prev-img">
                                <!--@event.event_images.first.attachment.url -->
                                <a href="#" class="lightbox-gallery-3 mfp-image">
                                <%if (@events.event_images.exists?)%>
                                            
                                              <img src="<%=@events.event_images.first.image_url%>" alt="" />
                                    <%else%>
                                              <img src="../../assets/logo.png" alt="" />  
                                <%end%>
                                  </a>
                                
                            </div>
                            <%if (@events.stadium_image.exists?)%>         
                                <img src="<%=@events.stadium_image.url%>" alt="" />
                            <%else%>
                                <img src="../../assets/stadium.jpg" alt="" />  
                            <%end%>
                            
                       
                            
                        </div>
                        <!-- End Product Images -->
                        
                        <!-- Product Description -->
                        <div class="col-sm-7">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="mt-0" style="padding: 17px 17px 17px 0;"><%= @event.title %> </h3>
                                </div>
                                <div class="col-md-6">
                                    <%if user_signed_in?%>
                                        <%= link_to  controller:"tickets", action:"new", event_id: @event.id do%>
                                            <div class="call-to-action-sale sell" style="padding: 10px; width: initial; height: initial;">Sell Tickets</div>
                                        <%end%>
                                    <%end%>
                                </div>
                            </div>
                            <hr class="mt-0 mb-30"/>
                            <div class="row">
                                <div class="col-xs-4 lead mt-0 mb-20">
                                    <h3>Venue</h3>
                                    <%= @event.venue %>
                                </div>
                                 <div class="col-xs-4 lead mt-0 mb-20">
                                    <h3>Location</h3>
                                    <%= @event.location %>
                                </div>

                                <div class="col-xs-4 lead mt-0 mb-20">
                                    <h3>Event Time</h3>
                                    <%= local_time(@event.event_date_time, '%d/%m/%Y %l:%M%p') %>
                                </div>
                                
                            </div>
                            <hr class="mt-0 mb-30"/>
                            <div class="row">
                                <div class="col-xs-12 lead mt-0 mb-20">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Price</th>
                                                <th>Available Quantity</th>
                                                <th>Select Quantity</th>
                                            </tr>
                                        </thead>
                                         <tbody>
                                            <% @tickets.each do |ticket|  %>
                                                <tr>
                                                    <td>
                                                        <%= number_to_currency(ticket.ticket_selling_price, :unit => '$') %>
                                                    </td>
                                                    <td>
                                                        <%if((ticket.number_of_tickets - ticket.number_of_tickets_purchased) <= 0)%>
                                                          SOLD OUT!
                                                            <%else%>
                                                          <%= ticket.number_of_tickets - ticket.number_of_tickets_purchased%>
                                                        <%end%>
                                                    </td>
                                                    <td>
                                                      <%if((ticket.number_of_tickets - ticket.number_of_tickets_purchased) > 0)%>
                                                        <%= form_for(@tickets_q ,:url => {:controller => :cart, :action => :add ,:id=> ticket.id}) do |f| %>
                                                            <%= f.select(:number_of_tickets, 1.. (ticket.number_of_tickets - ticket.number_of_tickets_purchased),  :class => "myDropDown") %>
                                                        
                                                           
                                                            <!--<%#unless session[:cart]%>-->
                                                            <%if((ticket.number_of_tickets - ticket.number_of_tickets_purchased) > 0) %>
                                                                 <%= f.submit "Buy",:class=>"submit_btn btn btn-mod btn-medium btn-round" %>
                                                            <%end%>
                                                            <!--<%#end%>-->
                                                        <%end%>
                                                       <%else%>
                                                          UNAVAILABLE!
                                                      <%end%>
                                                    </td> 
                                                </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                </div>
                                
                            </div>
                            
                            <hr class="mt-0 mb-30"/> 
                            
                            <div class="section-text mb-30">
                                <h3>Description</h3>
                                <%= @event.description %>
                            </div>
                        
                        </div>
                        <!-- End Product Description -->
                        
