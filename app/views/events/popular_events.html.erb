<section class="home-section bg-dark-alfa-50 " style='background-color: white;' id="home">
   <div class="container">            
        <!-- Hero Content -->
        <div class="home-content">
            <div class="home-text mb-30" style="padding: 130px 0px 25px 0px;">
                <h1 class="hs-line-8 no-transp font-alt mb-50 mb-xs-30">
                   Popular Events
                </h1>
            </div>
        </div>
        <!-- End Hero Content -->            
   </div>
</section>
  <% if @search_result.count==0 %>
  <h3> No Such Event Found <h3>
  <%=link_to "Create New Event", controller: "events", action: "new" %>

<%else%>

  <% @search_result.each do |event| %>
                                <!-- Shop Item -->
                              <div class="col-md-3 col-lg-3 mb-60 mb-xs-40 item-event">
                                    
                                    <div class="post-prev-img" style="min-height:236px !important;">
                                        
                                        
                                        <%if (event.event_images.exists?)%>
                                         
                                            <%= link_to event ,:class => "event-link" do%><img src="<%=event.event_images.first.image_url%>" alt="" /><% end %>
                                        <%else%>
                                            <%= link_to event ,:class => "event-link" do%><img src=<%= image_path("logo.png") %>   alt="" /><% end %>
                                        <%end%>
                                        <!-- <div class="intro-label">
                                            <span class="label label-danger bg-red">Sale</span>
                                        </div> -->
                                        
                                    </div>
                                    
                                    <div class="post-prev-title font-alt align-center">
                                        
                                        <%= link_to event ,:class => "event-link" do%><%= event.title %><% end %>
                                    </div>
                                      <div class="post-prev-title font-alt align-center">
                                        
                                        <%= link_to event ,:class => "event-link" do%><%= event.venue %><% end %>
                                    </div>
                                      <div class="post-prev-title font-alt align-center">
                                        
                                        <%= link_to event ,:class => "event-link" do%><%= event.location %><% end %>
                                    </div>

                                    
                                </div>
                                <!-- End Shop Item -->
                                <% end %>
<%end%>